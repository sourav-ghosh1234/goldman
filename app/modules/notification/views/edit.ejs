<% layout(layout_directory+'/mainLayout') -%>
    <style>
    .controls.textareaclass {
    display: flex;
    flex-wrap: wrap;
}
.textareaclass #content-error {
    order: 1;
    flex-basis: 100%;
}
.textareaclass #cke_content{
 flex-basis: 100%;
    max-width: 100%;
}
    </style>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
	<div class="kt-subheader__main">
		<h3 class="kt-subheader__title"> <%= page_title %> </h3>
		<span class="kt-subheader__separator kt-subheader__separator--v"></span>
		<!-- <div class="kt-subheader__breadcrumbs">
			<a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
			<span class="kt-subheader__breadcrumbs-separator"></span>
			<span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
		</div> -->
	</div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
	<div class="row">
		<div class="col-lg-12">
			<div class="kt-portlet">
				<form class="kt-form kt-form--label-right" id="frmEditNotification" action="<%= generateUrl('notification.update') %>" method="POST" enctype="multipart/form-data">
					<div class="kt-portlet__body">
						<div class="form-group row">
							<div class="col-lg-12">
								<label for="title" class="control-label">Title</label>
								<div class="controls">
									<input id="title" readonly name="title" type="text" placeholder="Enter Title" class="form-control required" required data-validation-required-message="This field is required"
										value="<%=response.title?response.title:'' %>" />
								</div>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-lg-12">
								<label for="description" class="control-label">Content</label>
								<div class="controls textareaclass">
									<textarea class="form-control" name="content" id="content" rows="5"><%=response.content?response.content:'' %></textarea>
									<script src="https://cdn.ckeditor.com/4.15.0/basic/ckeditor.js"></script>
									<script>
									CKEDITOR.replace('content', {
									height: 150
									});
									</script>
								</div>
							</div>
						</div>
					</div>
					<!-- hidden id -->
					<input type="hidden" name="id" value="<%=response._id %>">
					<div class="kt-portlet__foot">
						<div class="kt-form__actions">
							<div class="row">
								<div class="col-lg-6">
									<button type="submit" class="btn btn-primary">Update</button>
									<a href="<%=generateUrl('notification.list') %>" class="btn btn-secondary">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>