<% layout(layout_directory+'/mainLayout') -%>

    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                <%= page_title %>
            </h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
         </div>
    </div>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="kt-portlet">
                <form class="kt-form kt-form--label-right" id="addBoatCharterFrm" action="<%= generateUrl('yachting.world.boat.charter.store') %>" enctype="multipart/form-data"
                    method="POST">

                    <div class="kt-portlet__body">
                        <ul class="nav nav-pills nav-fill" role="tablist">
                            <%response.languages.map((data)=>{%>
                                <%if(data.isDefault){%>
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#kt_tabs_<%=data.shortcode%>">
                                            <%=data.title%>
                                        </a>
                                    </li>
                                    <%}else{%>
                                        <li class="nav-item">
                                            <a class="nav-link" data-toggle="tab" href="#kt_tabs_<%=data.shortcode%>">
                                                <%=data.title%>
                                            </a>
                                        </li>
                                        <%}%>
                                            <%})%>
                        </ul>
                        <div class="tab-content">
                            <%
                                let count = 0;
                                response.languages.map((language)=>{
                            %>
                                <%if(language.shortcode == 'en'){%>
                                    <div class="tab-pane active" id="kt_tabs_<%=language.shortcode%>" role="tabpanel">
                                        <div class="form-group row">
                                            <div class="col-lg-6">
                                                <label>Image:</label>
                                                <input id="bannerImage" name="bannerImage" type="file" placeholder="Image" accept="image/*" class="form-control"/>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Title:</label>
                                                <input type="text" name="heading" id="heading" class="form-control" placeholder="Enter Title" value="">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                           <div class="col-lg-12">
                                                <label>Description:</label>
                                                <textarea name="content" id="content" class="ckeditor form-control" placeholder="Enter Description" rows="6"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-6">
                                                <label>For More Info:</label>
                                                <input type="text" name="forMoreInfo" id="forMoreInfo" class="form-control" placeholder="Enter For More Info Text" value="">
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Contact Us:</label>
                                                <input type="text" name="contactUs" id="contactUs" class="form-control" placeholder="Enter Contact Us Text" value="">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-12">
                                                 <label>Contact Info:</label>
                                                 <textarea name="contactInfo" id="contactInfo" class="ckeditor form-control" placeholder="Enter Contact Info" rows="6"></textarea>
                                             </div>
                                         </div>
                                    </div>
                                    <% } else{ %>
                                        <div class="tab-pane" id="kt_tabs_<%=language.shortcode%>" role="tabpanel">
                                            <div class="form-group row">
                                               <div class="col-lg-6">
                                                    <label>Title:</label>
                                                    <input type="text" name="translate[<%=count%>][heading]" id="heading_<%=count%>" class="form-control" placeholder="Enter Title" value="">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                               <div class="col-lg-12">
                                                    <label>Description:</label>
                                                    <textarea name="translate[<%=count%>][content]" id="content_<%=count%>" class="ckeditor form-control" placeholder="Enter Description" rows="6"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-6">
                                                    <label>For More Info:</label>
                                                    <input type="text" name="translate[<%=count%>][forMoreInfo]" id="forMoreInfo_<%=count%>" class="form-control" placeholder="Enter For More Info Text" value="">
                                                </div>
                                                <div class="col-lg-6">
                                                    <label>Contact Us:</label>
                                                    <input type="text" name="translate[<%=count%>][contactUs]" id="contactUs_<%=count%>" class="form-control" placeholder="Enter Contact Us Text" value="">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                     <label>Contact Info:</label>
                                                     <textarea name="translate[<%=count%>][contactInfo]" id="contactInfo_<%=count%>" class="ckeditor form-control" placeholder="Enter Contact Info" rows="6"></textarea>
                                                 </div>
                                             </div>
                                            <input type="hidden" name="translate[<%=count%>][language]" value="<%=language.shortcode%>">
                                        </div>
                                        <% count++ }%>
                                    <%})%>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-6">
                                    <a href="<%= generateUrl('yachting.world.boat.charter.list') %>" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>