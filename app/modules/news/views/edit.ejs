<% layout(layout_directory+'/mainLayout') -%>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
	<div class="kt-subheader__main">
		<h3 class="kt-subheader__title"> <%= page_title %> </h3>
		<span class="kt-subheader__separator kt-subheader__separator--v"></span>
		<!-- <div class="kt-subheader__breadcrumbs">
			<a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
			<span class="kt-subheader__breadcrumbs-separator"></span>
			<span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
		</div> -->
	</div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
	<div class="row">
		<div class="col-lg-12">
			<div class="kt-portlet">
				<form class="kt-form kt-form--label-right" id="frmEditNews" action="<%= generateUrl('news.update') %>" method="POST" enctype="multipart/form-data">
					<div class="kt-portlet__body">
						<div class="form-group row">
							<div class="col-lg-6">
								<label for="title" class="control-label">Title</label>
								<div class="controls">
									<input id="title" name="title" type="text" placeholder="Enter Title"
										class="form-control required" value="<%= response.title%>" />
								</div>
							</div>
							<div class="col-lg-6">
								<label for="title" class="control-label">Date</label>
								<div class="controls">
									<input id="date" name="date" type="text" placeholder="Enter Date"
										class="form-control required" value="<%= response.date%>" />
								</div>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-lg-6">
								<label for="title" class="control-label">Author Name</label>
								<div class="controls">
									<input id="author_name" name="author_name" type="text" placeholder="Enter Author Name"
										class="form-control required" value="<%= response.author_name%>" />
								</div>
							</div>
							<div class="col-lg-4">
								<label for="description" class="control-label">Image</label>
								<input type="file" name="image" id="image" class="form-control" accept="image/*">
							</div>
							<% if(response.image) { %>
							<div class="col-lg-2">
                                <br>
                                <img src="/uploads/news/thumb/<%= response.image%>" alt="No image found" height="50px">
                            </div>
							<% } %>
						</div>


						<div class="form-group row">
							<div class="col-lg-12">
								<label for="title" class="control-label">Content</label>
								<div class="controls">
									<textarea class="form-control ckeditor" name="content" id="content" rows="3"><%=response.content%></textarea>
								</div>
							</div>
						</div>
                    </div>
                    <!-- hidden id -->
                    <input type="hidden" name="id" value="<%= response._id %>">
					<div class="kt-portlet__foot">
						<div class="kt-form__actions">
							<div class="row">
								<div class="col-lg-6">
									<button type="submit" class="btn btn-primary">Update</button>
									<a href="<%= generateUrl('news.list') %>" class="btn btn-secondary">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>