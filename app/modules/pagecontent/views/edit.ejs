<% layout(layout_directory+'/mainLayout') -%>
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                <%= page_title %>
            </h3>
            <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            <div class="kt-subheader__breadcrumbs">
                <span class="kt-subheader__breadcrumbs-separator"></span>
                <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
            </div>
        </div>
    </div>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="col-lg-12">
                <div class="kt-portlet">
                    <form class="kt-form kt-form--label-right" id="editArtFrm" action="<%= generateUrl('pagecontent.update') %>" method="POST" enctype="multipart/form-data">
                        <div class="kt-portlet__body">
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label>Title:</label>
                                    <input type="text" name="title" id="title" class="form-control required" required placeholder="Enter Title" value="<%= response.pagecontent_data.title%>">
                                </div>
                                <div class="col-lg-6">
                                    <label>Page:</label>
                                    <select name="pageSlug" id="pageSlug" class="form-control required">
										<option value="">Select</option>
										<option value="new-developments" <%= response.pagecontent_data.pageSlug == 'new-developments' ? 'selected' : '' %> >New Developmet</option>
										<option value="contact-us" <%= response.pagecontent_data.pageSlug == 'contact-us' ? 'selected' : '' %> >Contact Us</option>
									</select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label for="pageContentImage" class="control-label">Image</label>
                                    <div class="controls">
                                        <input id="pageContentImage" name="image" type="file" placeholder="Enter Title" accept="image/*" class="form-control imagepickerWithPreviewId" data-previewelement="pageContentImagePreview" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <img class="pageContentImage" id="pageContentImagePreview" height="80px" src="/uploads/pagecontent/<%=response.pagecontent_data.image %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <label>Description:</label>
                                    <textarea name="description" id="description" cols="30" rows="5" class="form-control ckeditor"><%= response.pagecontent_data.description%></textarea>
                                </div>
                            </div>
                        </div>
                        <!-- hidden user id -->
                        <input type="hidden" name="pagecontent_id" value="<%=response.pagecontent_data._id%>">
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <a href="<%= generateUrl('pagecontent.list') %>" class="btn btn-secondary">Cancel</a>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>