<% layout(layout_directory+'/mainLayout') -%>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <%= page_title %>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div>
    </div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <form class="kt-form kt-form--label-right" id="userAddFrm"
                    action="<%= generateUrl('user.insert') %>" method="POST" enctype='multipart/form-data'>
                    <div class="kt-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label for="first_name" class="control-label">First Name</label>
                                <div class="controls">
                                    <input id="first_name" name="first_name" type="text" placeholder="Enter First Name"
                                        class="form-control required" required
                                        data-validation-required-message="This field is required" value=""
                                        pattern="[A-Za-z]+" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label for="last_name" class="control-label">Last Name</label>
                                <div class="controls">
                                    <input id="last_name" name="last_name" type="text" placeholder="Enter Last Name"
                                        class="form-control required" required
                                        data-validation-required-message="This field is required" value=""
                                        pattern="[A-Za-z]+" />
                                </div>
                            </div>
                        </div>
                         <div class="form-group row">
                              <div class="col-lg-6">
                                <label for="email" class="control-label">Email</label>
                                <div class="controls">
                                    <input id="email" name="email" type="text" autocomplete="off"
                                        placeholder="Enter Email" class="form-control required" required
                                        data-validation-required-message="This field is required" value=""
                                        data-validation-regex-regex="([A-Za-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})"
                                        data-validation-regex-message="Enter Valid Email" aria-invalid="true" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label for="phone" class="control-label">Phone Number</label>
                                <div class="controls">
                                    <input id="phone" name="phone" type="text" placeholder="Enter Phone Number"
                                        class="form-control required" required
                                        aria-invalid="true" minlength="8" maxlength="15" />
                                </div>
                            </div>
                        </div>
                         <div class="form-group row">
                                <div class="col-lg-6">
                                    <label for="user_name" class="control-label">User Name</label>
                                    <div class="controls">
                                        <input id="user_name" name="user_name" type="text" placeholder="Enter User Name" class="form-control required" required data-validation-required-message="This field is required" value="" />
                                    </div>
                                </div>
                                 <div class="col-lg-6">
                                    <label for="address" class="control-label">Address</label>
                                    <div class="controls">
                                        <input id="address" name="address" type="text" placeholder="Enter Address" class="form-control required" required data-validation-required-message="This field is required" value="" />
                                    </div>
                                </div>
                            </div>
                       
                        <div class="form-group row">
                             <div class="col-lg-6">
                                <label for="password" class="control-label">Password</label>
                                <div class="controls">
                                    <input id="password" name="password" type="password" autocomplete="off"
                                        placeholder="Enter Password" class="form-control required" required
                                        data-validation-required-message="This field is required" value=""
                                        aria-invalid="true" minlength="8" maxlength="20" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Profile Image</label>
                                <input type="file" name="profile_image" id="profile_image"
                                    class="form-control imagepicker required" required
                                    data-validation-required-message="This field is required">
                            </div>
                            <div class="col-lg-6">
                                <img class="pickedImage" height="125px" src="">
                            </div>
                        </div>
                       
                       
